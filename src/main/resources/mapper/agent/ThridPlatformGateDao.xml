<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.funny.admin.agent.dao.ThridPlatformGateDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.funny.admin.agent.entity.ThridPlatformGateEntity" id="thridPlatformGateMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="status" column="status"/>
        <result property="checkStatus" column="check_status"/>
    </resultMap>

    <select id="queryObject" resultType="com.funny.admin.agent.entity.ThridPlatformGateEntity">
        select
        `id`,
        `name`,
        `status`,
        `check_status`
        from thrid_platform_gate where id = #{value}
    </select>

    <select id="queryList" resultType="com.funny.admin.agent.entity.ThridPlatformGateEntity">
        select
        `id`,
        `name`,
        `status`,
        `check_status`
        from thrid_platform_gate
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from thrid_platform_gate 
	</select>

    <insert id="save" parameterType="com.funny.admin.agent.entity.ThridPlatformGateEntity" useGeneratedKeys="true"
            keyProperty="id">
		insert into thrid_platform_gate
		(
			`name`, 
			`status`,
			`check_status`
		)
		values
		(
			#{name}, 
			#{status},
			#{checkStatus}
		)
	</insert>

    <update id="update" parameterType="com.funny.admin.agent.entity.ThridPlatformGateEntity">
        update thrid_platform_gate
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="checkStatus != null">`check_status` = #{checkStatus}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from thrid_platform_gate where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from thrid_platform_gate where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>